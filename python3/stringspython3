#!/usr/bin/env python3



dna = ''
print(len(dna))

dna1 = 'ATTGGGCCCC'
print(f"A={dna1.count('A')}")
print(f"T={dna1.count('T')}")
print(f"C={dna1.count('C')}")
print(f"G={dna1.count('G')}")

dna2 = ''

dnaupper3=dna2.upper()

#assigned each base to a varible to be a number
num_a = dnaupper3.count('A')
num_t = dnaupper3.count('T')
num_c = dnaupper3.count('C')
num_g = dnaupper3.count('G')

#made each formated intoa string so that i can see the letter
print(f"A={dnaupper3.count('A')}")
print(f"T={dnaupper3.count('T')}")
print(f"C={dnaupper3.count('C')}")
print(f"G={dnaupper3.count('G')}")

dna4=dnaupper3.replace('T','U')
print(dna4)
print()
#at content
print(100*(num_a+num_t)/(num_a+num_t+num_c+num_g))

print(f"AT={100*(167+187)/(167+187+270+218)}")
print()

#gc content
print(100*(num_g+num_c)/(num_a+num_t+num_c+num_g))

print(f"GC={100*(270+218)/(167+187+270+218)}")

dna100nt = ''
sub_dna100nt = dna100nt[99:199]
print(sub_dna100nt)
